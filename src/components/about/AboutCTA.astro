    <div
      class="relative overflow-hidden rounded-3xl bg-primary-500 p-8 md:p-16 text-center shadow-2xl"
    >
      <!-- Decorative background element -->
      <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/3 w-64 h-64 bg-white/10 rounded-full blur-3xl"
